        "replace_spaces": true,
        "// replace_spaces": "Заменять пробелы на подчеркивания",
        
        "lowercase": true,
        "// lowercase": "Приводить имена к нижнему регистру"
    },
    
    "notifications": {
        "show_progress": true,
        "// show_progress": "Показывать прогресс загрузки",
        
        "update_interval": 5,
        "// update_interval": "Интервал обновления прогресса в секундах",
        
