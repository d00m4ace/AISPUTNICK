        ".html", ".htm", ".css", ".scss", ".sass", ".less",
        ".vue", ".jsx", ".tsx", ".svelte"
    ],
    "// text_file_extensions": "Расширения текстовых файлов для прямого сохранения",
    
    "encoding": {
        "primary": "utf-8",
        "// primary": "Основная кодировка для текстовых файлов",
        
        "fallback_encodings": [
            "cp1251", "cp866", "koi8-r", "iso-8859-5", "latin-1", "ascii"
