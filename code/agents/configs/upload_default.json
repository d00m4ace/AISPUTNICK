    "auto_detect_type": true,
    "// auto_detect_type": "Автоматически определять тип файла",
    
    "process_archives": false,
    "// process_archives": "Обрабатывать архивы (если false - предлагать использовать @zip)",
    
    "supported_audio_formats": [
        ".mp3", ".wav", ".ogg", ".m4a", ".flac", ".aac", ".wma", ".opus"
